<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="englishGreeter"
          class="com.nhnacademy.edu.springframework.messagesender.service.SmsMessageSender"
          scope="prototype"
          init-method="init">
    </bean>

    <bean id="koreanGreeter"
          class="com.nhnacademy.edu.springframework.messagesender.service.EmailMessageSender"
          scope="singleton"
          destroy-method="destroy">
    </bean>

    <bean id="MessageSendService" class="com.nhnacademy.edu.springframework.messagesender.service.MessageSendService" >
        <constructor-arg ref="englishGreeter"/>
        <constructor-arg ref="koreanGreeter"/>
    </bean>


</beans>